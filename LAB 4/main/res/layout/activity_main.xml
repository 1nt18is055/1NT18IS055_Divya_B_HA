<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AFB42B"
        android:backgroundTint="@color/purple_200"
        android:text="Calculator"
        android:textAlignment="center"
        android:textColor="#512DA8"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:layout_weight="1"
        android:background="#FFCCBB"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="32dp"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textSize="48sp"
        android:textStyle="bold" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1pt"
            >

            <Button
                android:id="@+id/butAc"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#4ABB86FC"
                android:text="@string/ac"
                android:textColor="#311B92"
                android:textSize="20sp"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/butPm"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#54BB86FC"
                android:text="+/-"
                android:textColor="#311B92"
                android:textSize="20sp"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/butPercent"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#66BB86FC"
                android:text="%"
                android:textColor="#311B92"
                android:textSize="20sp"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/butPlus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#BB86FC"
                android:text="+"
                android:textColor="#311B92"
                android:textSize="20sp"
                android:textStyle="bold"></Button>

        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

           android:layout_marginTop="1pt"
            >

            <Button
                android:id="@+id/butSeven"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#57BB86FC"
                android:text="7"
                android:textColor="#311B92"
                android:textSize="20sp"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/butEight"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#59BB86FC"
                android:text="8"
                android:textColor="#311B92"
                android:textSize="20sp"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/butNine"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#54BB86FC"
                android:text="9"
                android:textColor="#311B92"
                android:textSize="20sp"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/butMinus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_200"
                android:text="-"
                android:textColor="#311B92"
                android:textSize="20sp"
                android:textStyle="bold"></Button>

        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1pt"
            >

            <Button
                android:id="@+id/butFour"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#56BB86FC"
                android:text="4"
                android:textColor="#311B92"
                android:textSize="20sp"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/butFive"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#54BB86FC"
                android:text="5"
                android:textColor="#311B92"
                android:textSize="20sp"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/butSix"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#57BB86FC"
                android:text="6"
                android:textColor="#311B92"
                android:textSize="20sp"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/butDivide"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_200"
                android:text="/"
                android:textColor="#311B92"
                android:textSize="20sp"
                android:textStyle="bold"></Button>

        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1pt"
            >

            <Button
                android:id="@+id/butOne"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#59BB86FC"
                android:text="1"
                android:textColor="#311B92"
                android:textSize="20sp"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/butTwo"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#54BB86FC"
                android:text="2"
                android:textColor="#311B92"
                android:textSize="20sp"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/butThree"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#51BB86FC"
                android:text="3"
                android:textColor="#311B92"
                android:textSize="20sp"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/butMulti"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_200"
                android:text="*"
                android:textColor="#311B92"
                android:textSize="20sp"
                android:textStyle="bold"></Button>

        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1pt"
            >

            <Button
                android:id="@+id/butZero"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#56BB86FC"
                android:text="0"
                android:textColor="#311B92"
                android:textSize="20sp"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/butPoint"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="#56BB86FC"
                android:text="."
                android:textColor="#311B92"
                android:textSize="20sp"
                android:textStyle="bold"></Button>

            <Button
                android:id="@+id/butEqual"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_200"
                android:text="="
                android:textColor="#311B92"
                android:textSize="20sp"
                android:textStyle="bold"></Button>

        </TableRow>
    </TableLayout>
</LinearLayout>

